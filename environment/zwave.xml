<?xml version="1.0" encoding="UTF-8"?>
<dhc:dhc xmlns:dhc="http://elite.polito.it/dogHomeConfiguration"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://elite.polito.it/dogHomeConfiguration home_configuration.xsd ">
	<dhc:buildingEnvironment>
		<dhc:building name="Case">
			<dhc:flat class="Flat" name="ZWAVE_Demo">
				<dhc:room class="StorageRoom" name="demo_room">
					<dhc:ceiling class="Ceiling" name="ceiling" />
					<dhc:floor class="Floor" name="floor" />
					<dhc:wall class="Wall" name="wall" />
				</dhc:room>
			</dhc:flat>
		</dhc:building>
	</dhc:buildingEnvironment>
	<dhc:controllables>
		<dhc:device domoticSystem="ZWave" name="zwave-gateway"
			class="ZWaveGateway">
			<dhc:description>The ZWave X gateway
			</dhc:description>
			<dhc:isIn>demo_room</dhc:isIn>
			<dhc:param value="1" name="NodeID" />
		</dhc:device>
		
		
		<dhc:device domoticSystem="ZWave" name="Lamp_Holder" class="MainsPowerOutlet" gateway="zwave-gateway">
            <dhc:description>A MainsPowerOutlet instance named MainsPowerOutlet_ZW1</dhc:description>
            <dhc:isIn>demo_room</dhc:isIn>
            <dhc:param value="6" name="NodeID" />
            <dhc:param value="0" name="InstanceID" />
            <!-- <dhc:hasMeter>energy_power_meter_1</dhc:hasMeter> -->
            <dhc:controlFunctionality class="OnOffFunctionality">
                <dhc:commands>
                    <dhc:command id="OffCommand_Lamp_Holder" name="OffCommand_Lamp_Holder" class="OffCommand">
                        <dhc:param value="off" name="realCommandName"/>
                    </dhc:command>
                    <dhc:command id="OnCommand_Lamp_Holder" name="OnCommand_Lamp_Holder" class="OnCommand">
                        <dhc:param value="on" name="realCommandName"/>
                    </dhc:command>
                </dhc:commands>
            </dhc:controlFunctionality>
            <dhc:notificationFunctionality class="StateChangeNotificationFunctionality">
                <dhc:notifications>
                    <dhc:notification name="StateChangeNotification_Lamp_Holder" class="StateChangeNotification">
                        <dhc:param value="1" name="nParams"/>
                        <dhc:param value="stateChanged" name="notificationName"/>
                        <dhc:param type="State" value="newState" name="notificationParamName"/>
                    </dhc:notification>
                </dhc:notifications>
            </dhc:notificationFunctionality>
            <dhc:state class="OnOffState">
                <dhc:statevalues>
                    <dhc:statevalue name="off" class="OffStateValue"/>
                    <dhc:statevalue name="on" class="OnStateValue"/>
                </dhc:statevalues>
            </dhc:state>
        </dhc:device>
        
